.k-input
    > .k-wrapper
        &::before
        &::after
            z-index 2
            content ''
            display block
            position absolute
            left 0
            right 0
            bottom 0
        &::before
            border-bottom 1px solid rgba(0, 0, 0, 0.42)
            transition border-bottom-color $transition
        &::after
            border-bottom 2px solid $primary-color
            transform scaleX(0)
            transition transform $transition
    &:not(.k-disabled)
        > .k-wrapper
            &:hover
                &:before
                    border-bottom 2px solid rgba(0, 0, 0, 0.87)
    &:focus-within
        .k-wrapper::after
            transform scaleX(1)
    &.k-disabled
        > .k-wrapper
            &::before
                border-bottom-style dotted
    // suffix
    .k-suffix
        right 8px