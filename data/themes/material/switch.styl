delta = 3px

.k-switch
    margin delta
    &, .k-bar
        overflow visible
    .k-wrapper
        vertical-align top
    .k-handle
        height s('calc(100% + %s)', delta * 2)
        box-shadow $box-shadow
        position absolute
        top -3px
        right -3px
        transition background $transition
    &:not(.k-checked)
        .k-on
            display none
    &:not(.k-disabled)
        // checked
        &.k-checked
            .k-bar
                background #8bbae8
            .k-handle
                background $primary-color
            &:hover
                .k-handle
                    box-shadow 0px 0px 0px 7px rgba(25,118,210,0.16)
        &:hover
            .k-handle
                box-shadow 0 0 0 7px rgba(0, 0, 0, 0.08)
        